<h1>Edit Phone for <%= @phone.contact.name %></h1>

<% if @phone.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @phone.errors.full_message.each do |message|%>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/contacts/<%= @phone.contact.id %>/phones/<%= @phone.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="phone_number">Number</label>
  <input id="phone_number" name="phone[number]" type="text" value="<%= @phone.number %>">
  <button>Edit phone</button>
</form>
